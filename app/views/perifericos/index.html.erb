<h1>Perif&eacute;ricos</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Created at</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @perifericos.each do |periferico| %>
      <tr>
        <td><%= periferico.id %></td>
        <td><%= link_to periferico.name, periferico_path(periferico) %></td>
        <td><%= periferico.created_at %></td>
        <td>
          <%= link_to 'Editar', edit_periferico_path(periferico), :class => 'btn btn-mini' %>
          <%= link_to 'Eliminar', periferico_path(periferico), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Nuevo', new_periferico_path, :class => 'btn btn-primary' %>
