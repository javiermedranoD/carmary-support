<%= form_for @computer, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Computer</legend>

    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :model, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :model, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :so, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :so, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :processor, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :processor, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :memory, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :memory, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :hard_disk, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :hard_disk, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :serial, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :serial, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :observaciones, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :observaciones, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :estado, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :estado, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :departamento, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :departamento, :class => 'text_field' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', computers_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
